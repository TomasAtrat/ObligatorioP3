
@{
    ViewBag.Title = "Nueva Zona";
}

<script src="@Url.Content("~/Scripts/src/Zona.js")"></script>


<div class="starter-template" style="margin-top: -20px">
    <h1>Nueva zona</h1>
    <hr />
    <p class="lead">Los campos requeridos están marcados con un *</p>
</div>
<form>
    <div id="camposFormulario">
        <label>Nombre de la zona *</label>
        <br />
        <input type="text" id="nombreZona" />
        <br />
        <br />
        <label>Color para la zona *</label>
        <br />
        <input type="color" id="ColorPicker" />
        <br />
        <br />
        <label>Define los límites de la zona *</label>
        <br />
        <p style="font-size: 12px">Para definir los límites haz click derecho en cada punto</p>
    </div>
    <div id="map">
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2tVrQux02pwBZDsMYN9ILseEWWofaYNU&callback=initMap&libraries=visualization&v=weekly"
                async></script>
    </div>
    <br />
    <div id="buttonContainer" style="width: 20%; margin: auto; text-align:center">
        <input type="button" id="submit" value="Submit" onclick="clearFields()" />
    </div>

</form>

